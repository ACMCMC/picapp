<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:strokeColor">@color/foreground</item>
        <item name="android:strokeWidth">20.0</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="TextHeadline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="TextHeadline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="TextHeadline3" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/foreground</item>
    </style>
</resources>